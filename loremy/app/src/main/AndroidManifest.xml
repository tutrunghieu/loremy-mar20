<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silkroadpacific.loremy">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.menu.MenuDetailActivity"></activity>
        <activity android:name=".gui.order.OrderHistoryActivity"></activity>
        <activity android:name=".gui.outlet.OutletDetailActivity"></activity>
        <activity android:name=".gui.post.PostDetailActivity"></activity>
        <activity android:name=".gui.user.UserActivity"></activity>
    </application>

</manifest>